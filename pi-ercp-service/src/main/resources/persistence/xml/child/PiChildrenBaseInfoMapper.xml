  <select id="queryPiChildrenBaseInfoList" resultMap="BaseResultMap">
    select * from pi_children_base_info i
    <where>
      <if test="info.childAccountAddress != null and info.childAccountAddress != ''">
        i.child_account_address like concat('%', #{info.childAccountAddress}, '%')
      </if>
      <if test="info.childCurrentAddress != null and info.childCurrentAddress != ''">
         and i.child_current_address like concat('%', #{info.childCurrentAddress}, '%')
      </if>
      <if test="info.childName != null and info.childName != ''">
         and i.child_name like concat('%', #{info.childName}, '%')
      </if>
      <if test="info.childIdNo != null and info.childIdNo != ''">
         and i.child_id_no like concat('%', #{info.childIdNo}, '%')
      </if>
      <if test="info.childTelNo != null and info.childTelNo != ''">
         and i.child_tel_no like concat('%', #{info.childTelNo}, '%')
      </if>
      <if test="info.childNationality != null and info.childNationality != ''">
         and i.child_nationality like concat('%', #{info.childNationality}, '%')
      </if>
      <if test="info.childMale != null and info.childMale != ''">
         and i.child_male like concat('%', #{info.childMale}, '%')
      </if>
      <if test="info.childHealthStatus != null and info.childHealthStatus != ''">
         and i.child_health_status like concat('%', #{info.childHealthStatus}, '%')
      </if>
      <if test="info.childEscalationType != null and info.childEscalationType != ''">
         and i.child_escalation_type like concat('%', #{info.childEscalationType}, '%')
      </if>
      <if test="info.childDisabilityType != null and info.childDisabilityType != ''">
         and i.child_disability_type like concat('%', #{info.childDisabilityType}, '%')
      </if>
      <if test="info.childViolationGuardian != null and info.childViolationGuardian != ''">
         and i.child_violation_guardian like concat('%', #{info.childViolationGuardian}, '%')
      </if>
      <if test="info.status != null and info.status != ''">
         and i.status = #{info.status}
      </if>
    </where>
    order by i.create_time desc
  </select>

  <select id="queryPiChildrenBaseInfo" resultMap="BaseResultMapVO">
